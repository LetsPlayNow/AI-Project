<% provide :title, 'Sign In'%>
<% provide :head do%>
  <%=stylesheet_link_tag 'sessions/new'%>
<% end %>

<% provide :body do%>
    <%= flash[:error] %>
    <%= form_for(:session, url: sessions_path) do |f| %>

        <div id="email">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>

        <div id="password">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>

        <%= f.submit "Sign in", class: 'sumbit-btn' %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
<% end %>