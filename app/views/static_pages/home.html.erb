<% provide :title, 'AI-Project'%>

<% provide :head do %>
    <%= stylesheet_link_tag 'static_pages/home' %>
<% end %>

<% provide :body do %>
    <div id="title">
      <h1> AI Project </h1>
      <p>Write your own AI!</p>
      <!--TODO check do user havs game and send him to continue action-->
      <%= link_to start_game_path, id: 'start-game', method: :get,
                  'data-toggle' => "tooltip",
                  'title' =>"Game with real player with time limitations. \nYou can't leave this game before it ends" do %>
          Start or continue <br>multiplayer game
          <% end %>
      <%= link_to demonstration_path, id: 'demonstration', method: :get,
                  'data-toggle' => "tooltip",
                  'title' =>"Game with bots without time limitations.\n You can leave it at any time" do %>
          Start or continue <br> solo game
      <% end %>
    </div>

    <div id="text-info">
      <div id="description">
        <h2>About</h2>
        <p>
          On this site you can write AI using <%= link_to 'Ruby', 'https://www.ruby-lang.org/en/' %> language
          and let it fight against AIs written by other players
          AI - Project can give you new knowledge, skills, and a lot of fun!
          Just sign up to start this journey.
        </p>
        <%= link_to 'More info', 'about' %>
      </div>

      <div id="links">
        <h2>Additional links</h2>
        <!--TODO -->
        <ul>
          <li>Habrahabr link</li>
          <li>Creator link</li>
          <li>Github link</li>
        </ul>
      </div>
    </div>

    <div id="media">
      <%= video_tag(["vid2.webm", "vid2.mp4"], loop: true, autoplay: true, poster: 'static_pages/video-poster.png') %>
    </div>
<% end %>