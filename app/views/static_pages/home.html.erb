<% end %>

<% provide :body do %>
    <div id="title">
      <h1> AI Project </h1>
      <p>Write your own AI!</p>
      <%= link_to 'Start game', start_game_path, id: 'start-game' %>
    </div>

    <div id="media">
      <!--TODO gif файл с демкой, где 2 юнита кружатся по квадрату и стреляют в друг друга-->
